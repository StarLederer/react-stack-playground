{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "resolveJsonModule": true,
    "allowJs": false,
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "**/*.ts", "**/*.d.ts", "**/*.tsx"
  ]
}
